    "import random\\n",
    "import matplotlib.pyplot as plt\\n",
    "import pandas as pd\\n",
    "import warnings\\n",
    "\\n",
    "warnings.filterwarnings(\\"ignore\\", category=UserWarning)\\n",
    "\\n",
    "VARNAS = [\\"Brahmana\\", \\"Kshatriya\\", \\"Vaishya\\", \\"Shudra\\"]\\n",
    "\\n",
    "class Human:\\n",
    "    \\"\\"\\"Represents a single agent in the simulation.\\n",
    "\\n",
    "    Attributes:\\n",
    "        soul_id (int): A unique identifier for the soul, which persists across lives.\\n",
    "        generation (int): The number of times the soul has been reincarnated.\\n",
    "        is_alive (bool): The current life status of the human.\\n",
    "        age (int): The current age of the human in this life.\\n",
    "        lifespan (int): The predetermined age at which the human will die.\\n",
    "        varna (str): The social class (Varna) of the human.\\n",
    "        karma_score (int): The accumulated karma score for the current life.\\n",
    "    \\"\\"\\"\\n",
    "    def __init__(self, soul_id, generation=0):\\n",
    "        \\"\\"\\"Initializes a new Human.\\n",
    "\\n",
    "        Args:\\n",
    "            soul_id (int): The unique ID for the soul.\\n",
    "            generation (int, optional): The reincarnation generation. Defaults to 0.\\n",
    "        \\"\\"\\"\\n",
    "        self.soul_id = soul_id\\n",
    "        self.generation = generation\\n",
    "        self.is_alive = True\\n",
    "        self.age = 0\\n",
    "        self.lifespan = random.randint(50, 90)\\n",
    "        self.varna = None\\n",
    "        self.karma_score = 0\\n",
    "\\n",
    "    def __repr__(self):\\n",
    "        \\"\\"\\"Returns a string representation of the Human.\\n",
    "\\n",
    "        Returns:\\n",
    "            str: A formatted string showing the human's current state.\\n",
    "        \\"\\"\\"\\n",
    "        display_varna = self.varna if self.varna is not None else \\"No Varna\\"\\n",
    "        return (f\\"[Soul:{self.soul_id:03d} | Gen:{self.generation:02d} | Varna:{display_varna:<10} | \\"\\n",
    "                f\\"Karma:{self.karma_score:4d} | Age:{self.age:02d}/{self.lifespan:02d}]\\")\\n",
    "\\n",
    "class World:\\n",
    "    \\"\\"\\"Manages the simulation, including the population, time, and historical data.\\n",
    "\\n",
    "    Attributes:\\n",
    "        year (int): The current year of the simulation.\\n",
    "        population (list): A list of Human objects currently alive.\\n",
    "        soul_counter (int): A counter to generate unique soul IDs.\\n",
    "        population_cap (int): The maximum number of humans allowed in the world.\\n",
    "        history (list): A log of societal statistics for each year.\\n",
    "        soul_log (list): A detailed log of each soul's life journey.\\n",
    "    \\"\\"\\"\\n",
    "    def __init__(self, population_cap=10000):\\n",
    "        \\"\\"\\"Initializes the World.\\n",
    "\\n",
    "        Args:\\n",
    "            population_cap (int, optional): The maximum population size. Defaults to 10000.\\n",
    "        \\"\\"\\"\\n",
    "        self.year = 0\\n",
    "        self.population = []\\n",
    "        self.soul_counter = 0\\n",
    "        self.population_cap = population_cap\\n",
    "        self.history = []\\n",
    "        self.soul_log = []\\n",
    "\\n",
    "    def get_next_soul_id(self):\\n",
    "        \\"\\"\\"Gets the next available unique soul ID.\\n",
    "\\n",
    "        Returns:\\n",
    "            int: The next unique soul ID.\\n",
    "        \\"\\"\\"\\n",
    "        self.soul_counter += 1\\n",
    "        return self.soul_counter\\n",
    "\\n",
    "    def create_first_generation(self, num_humans, rule='random'):\\n",
    "        \\"\\"\\"Creates the initial population of the world based on a given rule.\\n",
    "\\n",
    "        Args:\\n",
    "            num_humans (int): The number of humans to create.\\n",
    "            rule (str, optional): The rule for assigning the first Varna ('random', 'equal', 'emergent'). Defaults to 'random'.\\n",
    "        \\"\\"\\"\\n",
    "        print(f\\"\\n--- GENESIS (Divine Law: {rule.upper()}) ---\\")\\n",
    "        if rule == 'random':\\n",
    "            print(\\"\\n!!! PHILOSOPHICAL ALERT: You chose the 'Unjust Lottery'. The system's claim to fairness is BROKEN at its origin.\\n\\")\\n",
    "        elif rule == 'equal':\\n",
    "            print(\\"\\n!!! PHILOSOPHICAL ALERT: You chose 'Arbitrary Equality'. The system is still founded on a decree, not merit.\\n\\")\\n",
    "        elif rule == 'emergent':\\n",
    "            print(\\"\\n!!! PHILOSOPHICAL ALERT: You chose the 'Blank Slate'. The most logical start, but the biased rules may still create inequality.\\n\\")\\n",
    "        for _ in range(num_humans):\\n",
    "            new_human = Human(soul_id=self.get_next_soul_id(), generation=0)\\n",
    "            if rule == 'random':\\n",
    "                new_human.varna = random.choice(VARNAS)\\n",
    "            elif rule == 'equal':\\n",
    "                new_human.varna = 'Vaishya'\\n",
    "            elif rule == 'emergent':\\n",
    "                new_human.varna = None\\n",
    "            if len(self.population) < self.population_cap:\\n",
    "                self.population.append(new_human)\\n",
    "                self.soul_log.append({'soul_id': new_human.soul_id, 'generation': new_human.generation, 'birth_year': self.year, 'birth_varna': new_human.varna, 'karma_from_past_life': 0})\\n",
    "            else:\\n",
    "                break\\n",
    "        print(f\\"The first {len(self.population)} humans have been created.\\")\\n",
    "\\n",
    "    def reincarnate(self, dead_human):\\n",
    "        \\"\\"\\"Reincarnates a dead human's soul into a new body with a new Varna.\\n",
    "\\n",
    "        Args:\\n",
    "            dead_human (Human): The deceased Human object to reincarnate.\\n",
    "        \\"\\"\\"\\n",
    "        if len(self.population) >= self.population_cap:\\n",
    "            return\\n",
    "        new_human = Human(soul_id=dead_human.soul_id, generation=dead_human.generation + 1)\\n",
    "        karma = dead_human.karma_score\\n",
    "        if karma > 75:\\n",
    "            new_human.varna = \\"Brahmana\\"\\n",
    "        elif karma > 25:\\n",
    "            new_human.varna = \\"Kshatriya\\"\\n",
    "        elif karma >= -25:\\n",
    "            new_human.varna = \\"Vaishya\\"\\n",
    "        else:\\n",
    "            new_human.varna = \\"Shudra\\"\\n",
    "        self.population.append(new_human)\\n",
    "        self.soul_log.append({'soul_id': new_human.soul_id, 'generation': new_human.generation, 'birth_year': self.year, 'birth_varna': new_human.varna, 'karma_from_past_life': karma})\\n",
    "\\n",
    "    def live_one_year(self):\\n",
    "        \\"\\"\\"Simulates one year of life for the entire population.\\n",
    "        This includes aging, karma changes, death, and reincarnation.\\n",
    "        \\"\\"\\"\\n",
    "        self.year += 1\\n",
    "        for human in self.population[:]:\\n",
    "            if human.is_alive:\\n",
    "                human.age += 1\\n",
    "                karma_change = 0\\n",
    "                if human.varna == \\"Brahmana\\":\\n",
    "                    karma_change = random.randint(-1, 5)\\n",
    "                elif human.varna == \\"Kshatriya\\":\\n",
    "                    karma_change = random.randint(-2, 4)\\n",
    "                elif human.varna == \\"Vaishya\\":\\n",
    "                    karma_change = random.randint(-3, 3)\\n",
    "                else:\\n",
    "                    karma_change = random.randint(-4, 2)\\n",
    "                human.karma_score += karma_change\\n",
    "                if human.age >= human.lifespan:\\n",
    "                    human.is_alive = False\\n",
    "                    self.population.remove(human)\\n",
    "                    self.reincarnate(human)\\n",
    "        self.log_history()\\n",
    "\\n",
    "    def log_history(self):\\n",
    "        \\"\\"\\"Records the current state of the society (population counts and average karma by Varna).\\n",
    "        \\"\\"\\"\\n",
    "        if not self.population:\\n",
    "            return\\n",
    "        year_data = {'year': self.year, 'population': len(self.population)}\\n",
    "        for varna in VARNAS:\\n",
    "            count = len([p for p in self.population if p.varna == varna])\\n",
    "            avg_karma = sum(p.karma_score for p in self.population if p.varna == varna) / count if count > 0 else 0\\n",
    "            year_data[f'{varna}_count'] = count\\n",
    "            year_data[f'{varna}_avg_karma'] = avg_karma\\n",
    "        self.history.append(year_data)\\n",
    "\\n",
    "    def run_simulation(self, num_years):\\n",
    "        \\"\\"\\"Runs the simulation for a specified number of years.\\n",
    "\\n",
    "        Args:\\n",
    "            num_years (int): The number of years to simulate.\\n",
    "        \\"\\"\\"\\n",
    "        print(f\\"\\n--- Running Simulation for {num_years} years ---\\")\\n",
    "        for i in range(num_years):\\n",
    "            self.live_one_year()\\n",
    "        print(\\"\\n--- Simulation Complete ---\\")\\n",
    "\\n",
    "print(\\"Blueprints are ready.\\")"
   ]
