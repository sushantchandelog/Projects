    "# The \\"Just Universe\\" Experiment\\n",
    "\\n",
    "# --- Define the Fair Rules of this Universe ---\\n",
    "just_karma_rules = {\\n",
    "    \\"Brahmana\\": (-3, 3),\\n",
    "    \\"Kshatriya\\": (-3, 3),\\n",
    "    \\"Vaishya\\": (-3, 3),\\n",
    "    \\"Shudra\\": (-3, 3)\\n",
    "}\\n",
    "standard_thresholds = {\\n",
    "    'brahmana': 75,\\n",
    "    'kshatriya': 25,\\n",
    "    'vaishya': -25\\n",
    "}\\n",
    "\\n",
    "# --- Run the simulation ---\\n",
    "just_world = World(karma_rules=just_karma_rules, reincarnation_thresholds=standard_thresholds)\\n",
    "just_world.create_first_generation(num_humans=200)\\n",
    "just_world.run_simulation(num_years=1000)\\n",
    "\\n",
    "# --- Plot the results ---\\n",
    "history_df = pd.DataFrame(just_world.history)\\n",
    "plot_results(history_df, title=\\"The 'Just Universe' (Null Hypothesis)\\")"
   ]
