   "source": [
    "# Cell 1: The Universal Setup (Run Once)\\n",
    "import random\\n",
    "import matplotlib.pyplot as plt\\n",
    "import pandas as pd\\n",
    "import warnings\\n",
    "\\n",
    "warnings.filterwarnings(\\"ignore\\", category=UserWarning)\\n",
    "\\n",
    "# --- Class Definitions ---\\n",
    "class Human:\\n",
    "    \\"\\"\\"Represents a single agent in the simulation.\\n",
    "\\n",
    "    Attributes:\\n",
    "        soul_id (int): A unique identifier for the soul, which persists across lives.\\n",
    "        generation (int): The number of times the soul has been reincarnated.\\n",
    "        is_alive (bool): The current life status of the human.\\n",
    "        age (int): The current age of the human in this life.\\n",
    "        lifespan (int): The predetermined age at which the human will die.\\n",
    "        varna (str): The social class (Varna) of the human.\\n",
    "        karma_score (int): The accumulated karma score for the current life.\\n",
    "    \\"\\"\\"\\n",
    "    def __init__(self, soul_id, generation=0):\\n",
    "        \\"\\"\\"Initializes a new Human.\\n",
    "\\n",
    "        Args:\\n",
    "            soul_id (int): The unique ID for the soul.\\n",
    "            generation (int, optional): The reincarnation generation. Defaults to 0.\\n",
    "        \\"\\"\\"\\n",
    "        self.soul_id = soul_id\\n",
    "        self.generation = generation\\n",
    "        self.is_alive = True\\n",
    "        self.age = 0\\n",
    "        self.lifespan = random.randint(50, 90)\\n",
    "        self.varna = None\\n",
    "        self.karma_score = 0\\n",
    "\\n",
    "    def __repr__(self):\\n",
    "        \\"\\"\\"Returns a string representation of the Human.\\n",
    "\\n",
    "        Returns:\\n",
    "            str: A formatted string showing the human's current state.\\n",
    "        \\"\\"\\"\\n",
    "        display_varna = self.varna if self.varna is not None else \\"No Varna\\"\\n",
    "        return (f\\"[Soul:{self.soul_id:03d} | Gen:{self.generation:02d} | Varna:{display_varna:<10} | Karma:{self.karma_score:4d}]\\")\\n",
    "\\n",
    "class World:\\n",
    "    \\"\\"\\"Manages the simulation, including the population, time, and experimental rules.\\n",
    "\\n",
    "    Attributes:\\n",
    "        year (int): The current year of the simulation.\\n",
    "        population (list): A list of Human objects currently alive.\\n",
    "        soul_counter (int): A counter to generate unique soul IDs.\\n",
    "        history (list): A log of societal statistics for each year.\\n",
    "        population_cap (int): The maximum number of humans allowed in the world.\\n",
    "        karma_rules (dict): A dictionary defining the karma change rules for each Varna.\\n",
    "        reincarnation_thresholds (dict): A dictionary defining the karma thresholds for reincarnation.\\n",
    "    \\"\\"\\"\\n",
    "    def __init__(self, karma_rules, reincarnation_thresholds, population_cap=1000):\\n",
    "        \\"\\"\\"Initializes the World with specific experimental parameters.\\n",
    "\\n",
    "        Args:\\n",
    "            karma_rules (dict): Rules for karma changes per Varna.\\n",
    "            reincarnation_thresholds (dict): Karma scores required for reincarnation into different Varnas.\\n",
    "            population_cap (int, optional): The maximum population size. Defaults to 1000.\\n",
    "        \\"\\"\\"\\n",
    "        self.year = 0\\n",
    "        self.population = []\\n",
    "        self.soul_counter = 0\\n",
    "        self.history = []\\n",
    "        self.population_cap = population_cap\\n",
    "        self.karma_rules = karma_rules\\n",
    "        self.reincarnation_thresholds = reincarnation_thresholds\\n",
    "        \\n",
    "    def create_first_generation(self, num_humans):\\n",
    "        \\"\\"\\"Creates the initial population, starting all as equals for a controlled experiment.\\n",
    "\\n",
    "        Args:\\n",
    "            num_humans (int): The number of humans to create.\\n",
    "        \\"\\"\\"\\n",
    "        for _ in range(num_humans):\\n",
    "            new_human = Human(soul_id=self.soul_counter+1, generation=0)\\n",
    "            self.soul_counter += 1\\n",
    "            new_human.varna = 'Vaishya'\\n",
    "            if len(self.population) < self.population_cap:\\n",
    "                self.population.append(new_human)\\n",
    "            else:\\n",
    "                break\\n",
    "\\n",
    "    def reincarnate(self, dead_human):\\n",
    "        \\"\\"\\"Reincarnates a soul based on the world's reincarnation thresholds.\\n",
    "\\n",
    "        Args:\\n",
    "            dead_human (Human): The deceased Human object.\\n",
    "        \\"\\"\\"\\n",
    "        if len(self.population) >= self.population_cap:\\n",
    "            return\\n",
    "        new_human = Human(soul_id=dead_human.soul_id, generation=dead_human.generation + 1)\\n",
    "        karma = dead_human.karma_score\\n",
    "        t = self.reincarnation_thresholds\\n",
    "        if karma > t['brahmana']:\\n",
    "            new_human.varna = \\"Brahmana\\"\\n",
    "        elif karma > t['kshatriya']:\\n",
    "            new_human.varna = \\"Kshatriya\\"\\n",
    "        elif karma >= t['vaishya']:\\n",
    "            new_human.varna = \\"Vaishya\\"\\n",
    "        else:\\n",
    "            new_human.varna = \\"Shudra\\"\\n",
    "        self.population.append(new_human)\\n",
    "        \\n",
    "    def live_one_year(self):\\n",
    "        \\"\\"\\"Simulates one year of life for the population using the world's karma rules.\\n",
    "        \\"\\"\\"\\n",
    "        self.year += 1\\n",
    "        for human in self.population[:]:\\n",
    "            if human.is_alive:\\n",
    "                human.age += 1\\n",
    "                rule = self.karma_rules.get(human.varna, (-3, 3))\\n",
    "                human.karma_score += random.randint(rule[0], rule[1])\\n",
    "                if human.age >= human.lifespan:\\n",
    "                    human.is_alive = False\\n",
    "                    self.population.remove(human)\\n",
    "                    self.reincarnate(human)\\n",
    "        self.log_history()\\n",
    "        \\n",
    "    def log_history(self):\\n",
    "        \\"\\"\\"Logs the current state of the world's population for historical analysis.\\n",
    "        \\"\\"\\"\\n",
    "        if not self.population:\\n",
    "            return\\n",
    "        varnas = [\\"Brahmana\\", \\"Kshatriya\\", \\"Vaishya\\", \\"Shudra\\"]\\n",
    "        year_data = {'year': self.year, 'population': len(self.population)}\\n",
    "        for varna in varnas:\\n",
    "            count = len([p for p in self.population if p.varna == varna])\\n",
    "            avg_karma = sum(p.karma_score for p in self.population if p.varna == varna) / count if count > 0 else 0\\n",
    "            year_data[f'{varna}_count'] = count\\n",
    "            year_data[f'{varna}_avg_karma'] = avg_karma\\n",
    "        self.history.append(year_data)\\n",
    "\\n",
    "    def run_simulation(self, num_years):\\n",
    "        \\"\\"\\"Runs the simulation for a given number of years.\\n",
    "\\n",
    "        Args:\\n",
    "            num_years (int): The number of years to simulate.\\n",
    "        \\"\\"\\"\\n",
    "        for i in range(num_years):\\n",
    "            self.live_one_year()\\n",
    "\\n",
    "# --- Plotting Function ---\\n",
    "def plot_results(history_df, title):\\n",
    "    \\"\\"\\"Plots the results of a simulation experiment.\\n",
    "\\n",
    "    Args:\\n",
    "        history_df (pd.DataFrame): DataFrame containing the simulation history.\\n",
    "        title (str): The title for the plot.\\n",
    "    \\"\\"\\"\\n",
    "    print(\\"\\n\\" + \\"=\\"*50)\\n",
    "    print(f\\"      Results for: {title}\\")\\n",
    "    print(\\"=\\"*50)\\n",
    "    plt.style.use('seaborn-v0_8-whitegrid')\\n",
    "    fig, axes = plt.subplots(1, 2, figsize=(16, 6))\\n",
    "    fig.suptitle(f'Hypothesis Test: {title}', fontsize=20)\\n",
    "    ax1 = axes[0]\\n",
    "    ax2 = axes[1]\\n",
    "    varnas = [\\"Brahmana\\", \\"Kshatriya\\", \\"Vaishya\\", \\"Shudra\\"]\\n",
    "    ax1.stackplot(history_df['year'], history_df['Brahmana_count'], history_df['Kshatriya_count'], history_df['Vaishya_count'], history_df['Shudra_count'], labels=varnas, alpha=0.8)\\n",
    "    ax1.set_title('Population by Varna')\\n",
    "    ax1.set_xlabel('Year')\\n",
    "    ax1.set_ylabel('Population Count')\\n",
    "    ax1.legend(loc='upper left')\\n",
    "    for varna in varnas:\\n",
    "        ax2.plot(history_df['year'], history_df[f'{varna}_avg_karma'], label=varna)\\n",
    "    ax2.set_title('Average Karma by Varna')\\n",
    "    ax2.set_xlabel('Year')\\n",
    "    ax2.set_ylabel('Average Karma Score')\\n",
    "    ax2.legend(loc='upper left')\\n",
    "    plt.tight_layout(rect=[0, 0, 1, 0.95])\\n",
    "    plt.show()\\n",
    "\\n",
    "print(\\"Experimental Simulation Engine is ready.\\")"
   ]
